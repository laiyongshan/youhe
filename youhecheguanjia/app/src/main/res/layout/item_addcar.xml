<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:background="@color/gray"
            />

        <!--车牌号码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                >

                <TextView
                    android:id="@+id/carNum_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    android:text="车牌号码"
                    android:textSize="16sp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/black"
                    android:layout_marginRight="5dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="@color/white"
                    android:layout_marginLeft="1dp"
                    android:padding="6dp"
                    >

                    <TextView
                        android:id="@+id/provincecode_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:layout_marginRight="6dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="left"
                        android:textSize="20sp"
                        android:padding="2dp"
                        android:drawableRight="@drawable/xiangxiax"
                        android:drawablePadding="5dp"
                        />

                    <EditText
                        android:id="@+id/CarNumber_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:hint="请输入车牌号"
                        android:textSize="16sp"
                        android:singleLine="true"
                        android:maxLength="7"
                        android:textColorHint="@color/hint_gray"
                        android:textColor="#606060"
                        />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                />
        </LinearLayout>


        <!--车身架号-->
        <LinearLayout
            android:id="@+id/carCode_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                >

                <TextView
                    android:id="@+id/carCode_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="车身架号"
                    android:textSize="16sp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/black"
                    android:layout_marginRight="15dp"
                    />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="6dp"
                    >
                    <EditText
                        android:id="@+id/CarCode_et"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:hint="请输入车身架号"
                        android:textSize="16sp"
                        android:singleLine="true"
                        android:layout_alignParentLeft="true"
                        android:textColorHint="@color/hint_gray"
                        android:textColor="#606060"
                        android:maxLength="17"
                        />

                    <ImageView
                        android:id="@+id/carCode_doubt_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/wenhao_01"
                        android:padding="5dp"
                    />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                />
        </LinearLayout>

        <!--发动机号-->
        <LinearLayout
            android:id="@+id/carEngine_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/carEngine_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:layout_marginRight="15dp"
                    android:text="发动机号"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="6dp"
                    >
                    <EditText
                        android:id="@+id/CarEngine_et"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:hint="请输入发动机号"
                        android:textSize="16sp"
                        android:layout_toLeftOf="@+id/doubt_img"
                        android:layout_alignParentLeft="true"
                        android:textColorHint="@color/hint_gray"
                        android:textColor="#606060"
                        android:maxLength="25"
                        android:layout_marginRight="23dp"
                        />

                    <ImageView
                        android:id="@+id/carEngine_doubt_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/wenhao_01"
                        android:padding="5dp"
                        />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/gray"
            />


        <!--车系-->
        <RelativeLayout
            android:id="@+id/car_type_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center_vertical"
            android:background="@drawable/laybeijin"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车        型"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginRight="15dp"
                />


            <TextView
                android:id="@+id/car_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:drawableRight="@drawable/icon_right"
                android:text="点击选择"
                android:drawablePadding="8dp"
                android:textSize="16sp"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            />



        <!--车系-->
        <RelativeLayout
            android:id="@+id/car_model_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center_vertical"
            android:background="@drawable/laybeijin"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车        系"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginRight="15dp"
                />


            <TextView
                android:id="@+id/car_model_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:drawableRight="@drawable/icon_right"
                android:text="点击选择"
                android:drawablePadding="8dp"
                android:textSize="16sp"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            />


        <!--备注-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center_vertical"
            android:background="@color/white"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="备        注"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginRight="15dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="6dp"
                    >
                    <EditText
                        android:id="@+id/remark_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:hint="如张三的车(选填)"
                        android:textSize="16sp"
                        android:textColorHint="@color/hint_gray"
                        android:textColor="#606060"
                        android:maxLength="30"
                        />
                </LinearLayout>
            </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            />


    </LinearLayout>


</LinearLayout>